<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="apteka-projekt" >
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
<!--        <class>com.isjackalive.entity.Recepta</class>-->
<!--        <class>com.isjackalive.entity.Pacjent</class>-->
<!--        <class>com.isjackalive.entity.Doktor</class>-->
<!--        <class>com.isjackalive.entity.Produkt</class>-->

        <class>com.isjackalive.App</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:sqlite:liteDatabase/apteka.db"/>
            <property name="hibernate.connection.driver_class" value="org.sqlite.JDBC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>